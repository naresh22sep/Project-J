# Optional Environment Variables for Prompt Tracking
# Copy this to a .env file in your project root if you want to customize settings

# =====  DATABASE SETTINGS (Already Working) =====
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root  
DB_PASSWORD=Naresh123
DB_NAME=jobhunter_fresh

# ===== PROMPT TRACKING SETTINGS (Optional) =====

# Enable/disable prompt tracking globally
PROMPT_TRACKING_ENABLED=True

# Maximum prompt length (characters)
PROMPT_MAX_LENGTH=10000

# Background save timeout (seconds)
PROMPT_SAVE_TIMEOUT=30

# Data retention (days, 0=forever)
PROMPT_RETENTION_DAYS=365

# Rate limiting (prompts per hour)
PROMPT_RATE_LIMIT_PER_HOUR=100

# Feature toggles
PROMPT_TRACKING_DEBUG=False
PROMPT_TRACK_GIT_COMMITS=True
PROMPT_TRACK_FILE_OPERATIONS=True
PROMPT_TRACK_COMMANDS=True

# Filters
PROMPT_MIN_COMPLEXITY=  # Leave empty to track all
PROMPT_IGNORE_CATEGORIES=  # Comma-separated list

# Export limits
PROMPT_EXPORT_MAX_RECORDS=10000

# Privacy settings
PROMPT_ANONYMIZE_DATA=False
PROMPT_ENCRYPT_CONTENT=False

# =====  FLASK SETTINGS =====
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production